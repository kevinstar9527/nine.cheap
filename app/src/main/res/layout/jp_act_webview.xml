<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/jp_tbinfo_mainLy"
    android:background="@color/common_bgcolor"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <WebView
        android:id="@+id/jp_tbinfo_body"
        android:background="@color/common_bgcolor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/webview_style" />
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="fill_parent"
        android:layout_height="3.0dip"
        android:max="100"
        android:progressDrawable="@drawable/progress_diy"
        android:layout_alignTop="@id/jp_tbinfo_body"
        style="?android:attr/progressBarStyleHorizontal" />
    <include
        android:visibility="gone"
        layout="@layout/loading" />
</RelativeLayout>