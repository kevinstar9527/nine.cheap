<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
              android:background="@drawable/ic_main_bg"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/jp_main_person"
        android:padding="8.669983dip"
        android:layout_width="44.0dip"
        android:layout_height="fill_parent"
        android:src="@drawable/jp_main_person_btn" />
    <View android:layout_gravity="center_vertical"
          android:background="@color/white_20"
          android:layout_width="1.0dip"
          android:layout_height="32.0dip" />
    <RelativeLayout android:layout_width="44.0dip"
                    android:layout_height="fill_parent">
        <ImageView
            android:id="@+id/jp_main_favor"
            android:padding="8.669983dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/jp_main_favor_btn" />
        <ImageView
            android:id="@+id/jp_main_favor_dot"
            android:visibility="gone"
            android:layout_width="6.0dip"
            android:layout_height="6.0dip"
            android:layout_marginTop="5.3299866dip"
            android:layout_marginRight="5.3299866dip"
            android:src="@drawable/jp_circle_red"
            android:layout_alignRight="@id/jp_main_favor" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/jp_main_layout_shoppingbag"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginRight="8.669983dip">
        <View android:layout_gravity="center_vertical"
              android:background="@color/white_20"
              android:layout_width="1.0dip"
              android:layout_height="32.0dip" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/jp_main_shoppingbagpic"
                android:layout_width="26.659973dip"
                android:layout_height="26.659973dip"
                android:layout_marginLeft="8.669983dip"
                android:src="@drawable/jp_main_shopping_btn"
                android:layout_centerVertical="true" />
            <TextView android:textSize="10.0sp"
                      android:textColor="@color/white"
                      android:gravity="center"
                      android:id="@+id/jp_main_shoppingbagnum"
                      android:background="@drawable/jp_circle_bg"
                      android:paddingLeft="4.0dip"
                      android:paddingRight="4.0dip"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="26.0dip"
                      android:layout_marginTop="4.0dip" />
        </RelativeLayout>
        <TextView
            android:textSize="14.0sp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:id="@+id/jp_main_shoppingbagdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>