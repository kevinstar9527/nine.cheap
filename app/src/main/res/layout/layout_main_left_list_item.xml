<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/left_menul_item_root"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">

        <ImageView
            android:id="@+id/imageview_category"
            android:layout_width="42.0dip"
            android:layout_height="42.0dip"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/left_item_bottom_gap"
            android:layout_marginTop="@dimen/size_32"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/left_menu_all"/>

        <TextView
            android:id="@+id/textview_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageview_category"
            android:layout_centerHorizontal="true"
            android:text="@string/str_left_muying"
            android:textColor="@color/bottom_tab_text_normal_color"
            android:textSize="10.0sp"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_alignParentBottom="true"
            android:background="@color/goods_double_item_line"/>
    </RelativeLayout>

    <View
        android:id="@+id/goods_item_vertical_line"
        android:background="@color/goods_double_item_line"
        android:layout_width="1.0px"
        android:layout_height="fill_parent" />
</LinearLayout>