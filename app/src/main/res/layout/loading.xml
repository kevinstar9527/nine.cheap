<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:gravity="center" 
    android:layout_gravity="center" 
    android:orientation="vertical" 
    android:id="@+id/loading" 
    android:visibility="gone" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <kevinstar1.edu.cn.ninecheap.ui.widget.RoundProgressBar
        android:id="@+id/loading_pb" 
        android:layout_width="50.0dip" 
        android:layout_height="50.0dip" />
    <TextView 
        android:textAppearance="?android:textAppearanceMedium"
        android:textSize="15.0sp" 
        android:textColor="@color/common_grey" 
        android:id="@+id/loading_tv"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/running" />
    <RelativeLayout
        android:gravity="center" 
                    android:id="@+id/iv_load"
        android:paddingLeft="12.0dip" 
        android:paddingRight="12.0dip" 
        android:visibility="gone" 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="-150.0dip">
        <ImageView 
            android:id="@+id/refresh_btn"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />
        <TextView 
            android:textSize="15.0sp" 
            android:textColor="@color/common_grey" 
            android:gravity="center_horizontal" 
            android:id="@+id/refresh_text" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip" 
            android:text="@string/refresh" 
            android:layout_below="@id/refresh_btn" 
            android:lineSpacingExtra="3.0dip" />
        <TextView 
            android:textSize="16.0sp" 
            android:textColor="@color/white" 
            android:gravity="center"
            android:id="@+id/refresh_try_again" 
            android:background="@drawable/common_app_btn" 
            android:visibility="gone" 
            android:layout_width="120.0dip"
            android:layout_height="44.0dip"
            android:layout_marginTop="24.0dip" 
            android:text="@string/refresh_try_again" 
            android:layout_below="@id/refresh_text" 
            android:layout_centerInParent="true" />
        <TextView
            android:textSize="12.0sp" 
            android:textColor="@color/common_grey"
            android:gravity="center_horizontal" 
            android:id="@+id/refresh_tip" 
            android:visibility="gone" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_marginTop="10.0dip"
            android:text="@string/refresh" 
            android:layout_below="@id/refresh_text" 
            android:lineSpacingExtra="3.0dip" />
    </RelativeLayout>
</LinearLayout>